@model IEnumerable<RentalPortal.Web.Models.EquipmentDto>

@{
    ViewData["Title"] = "Index";
}


<!-- Page Content -->
<div class="container">
    <div class="row">

        <div class="col-lg-12">

            <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100">
                        <a href="#"><img class="card-img-top" src="http://placehold.it/700x400" alt=""></a>
                        <div class="card-body">
                            <h4 class="card-title">
                                @Html.ActionLink(item.Name,"Details", new {id=item.EquipmentId})
                                
                            </h4>
                            <p class="card-text">@item.EquipmentType.ToString("G")</p>
                        </div>
                        <div class="card-footer">
                            <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
                        </div>
                    </div>
                </div>
            }

            </div>
            <!-- /.row -->
        </div>
        <!-- /.col-lg-9 -->
    </div>
    <!-- /.row -->
</div>
